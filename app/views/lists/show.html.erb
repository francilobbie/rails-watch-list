<div class="container">
  <h2>This is <%= @list.name %> list</h2>
  <ul class="list-group">
    <% @list.bookmarks.each do |bookmark| %>
      <li class="list-group-item">
          <h2><%= bookmark.movie.title %></h2>
          <%= cl_image_tag bookmark.photo.key, height: 300, width: 400, crop: :fill %>
          <%= link_to "Delete",
          bookmark_path(bookmark),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          <p>"<%= bookmark.comment %>"</p>
      </li>
    <% end %>
  </ul>
  <br>
  <%= link_to "Add a bookmark to your list", new_list_bookmark_path(@list), class: "btn btn-primary"%>
    <%= link_to "Return to all lists page", lists_path %>
</div>
