<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1517604931442-7e0c8ed2963c?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80);">
  <div class="container">
    <h1>Welcome to your movies watch list app</h1>
    <%# <p>Change your life and learn to code at one of our campuses around the world.</p> %>
  </div>
</div>

<div class="container">

    <p>
      <ul>
      <% @lists.each do |list| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
                <li> <h2><%= link_to list.name, list_path(list) %></li>
        </div>
      <% end %>
    </ul>
  </p>
  <p><%= link_to "Create a new list of movies", new_list_path(@list), class: "btn btn-primary" %></p>
</div>
